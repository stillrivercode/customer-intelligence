# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# API Ninjas API Key (required for Customer Intelligence Dashboard)
# Get your free key from: https://api-ninjas.com
# No credit card required for free tier
VITE_API_NINJAS_KEY=your_api_ninjas_key_here

# OpenRouter API Key (required for AI workflows)
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-your-api-key-here

# GitHub Personal Access Token (optional)
# Only needed for cross-workflow triggering
# Scopes: repo, workflow, write:packages, read:org
GH_PAT=your-github-token-here

# Debug mode (optional)
# Set to 'true' to enable detailed logging
DEBUG=false

# AI Model Configuration (optional)
# Specify which AI model to use for tasks
AI_MODEL=anthropic/claude-3.5-sonnet

# Cost monitoring (optional)
# Set spending limits for AI operations
AI_DAILY_COST_LIMIT=50
AI_MONTHLY_COST_LIMIT=500

# Circuit breaker settings (optional)
# Maximum consecutive failures before stopping
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
